{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22
  },
  "configurePresets": [
    {
      "name": "dev-base",
      "hidden": true,
      "warnings": {
        "uninitialized": true
      },
      "errors": {
        "dev": true
      }
    },
    {
      "name": "platform-base",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": true
      }
    },
    {
      "name": "windows-base",
      "inherits": ["platform-base"],
      "hidden": true,
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_MAKE_PROGRAM": {
          "type": "FILEPATH",
          "value": "${sourceDir}/tools/ninja/windows/ninja.exe"
        }
      }
    },
    {
      "name": "linux-base",
      "inherits": ["platform-base"],
      "hidden": true,
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_MAKE_PROGRAM": {
          "type": "FILEPATH",
          "value": "${sourceDir}/tools/ninja/linux/ninja"
        }
      }
    },
    {
      "name": "macos-base",
      "inherits": ["platform-base"],
      "hidden": true,
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Darwin"
      },
      "cacheVariables": {
        "CMAKE_MAKE_PROGRAM": {
          "type": "FILEPATH",
          "value": "${sourceDir}/tools/ninja/macos/ninja"
        }
      }
    },
    {
      "name": "x64-base",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "msvc-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_CXX_FLAGS": "/WX"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      }
    },
    {
      "name": "clangcl-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl",
        "CMAKE_CXX_FLAGS": "/WX"
      },
      "toolset": {
        "value": "ClangCL,host=x64",
        "strategy": "external"
      }
    },
    {
      "name": "clang-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_FLAGS": "-Werror"
      }
    },
    {
      "name": "gcc-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_CXX_FLAGS": "-Werror"
      }
    },
    {
      "name": "lld-base",
      "hidden": true,
      "environment": {
        "LDFLAGS": "-fuse-ld=lld"
      }
    },
    {
      "name": "windows-msvc-x64",
      "displayName": "MSVC, 64-bit",
      "inherits": ["windows-base", "msvc-base", "x64-base"]
    },
    {
      "name": "windows-clangcl-x64",
      "displayName": "Clang, 64-bit",
      "inherits": ["windows-base", "clangcl-base", "x64-base"]
    },
    {
      "name": "linux-clang-x64",
      "displayName": "Clang, 64-bit",
      "inherits": ["linux-base", "clang-base", "lld-base", "x64-base"]
    },
    {
      "name": "linux-gcc-x64",
      "displayName": "GCC, 64-bit",
      "inherits": ["linux-base", "gcc-base", "x64-base"]
    },
    {
      "name": "macos-clang",
      "displayName": "Clang",
      "inherits": ["macos-base", "clang-base"]
    }
  ],
  "buildPresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Linux"
      }
    },
    {
      "name": "macos-base",
      "hidden": true,
      "condition": {
        "lhs": "${hostSystemName}",
        "type": "equals",
        "rhs": "Darwin"
      }
    },
    {
      "name": "install-base",
      "hidden": true,
      "targets": ["install"]
    },
    {
      "name": "windows-msvc-x64-debug",
      "inherits": ["windows-base", "install-base"],
      "configurePreset": "windows-msvc-x64",
      "configuration": "Debug",
      "displayName": "Debug"
    },
    {
      "name": "windows-msvc-x64-development",
      "inherits": ["windows-base", "install-base"],
